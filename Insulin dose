<body>
  <div class="container">
    <h1>Insulin Dose Calculator</h1>

    <label for="bw">Body Weight (kg):</label>
    <input type="number" id="bw" step="any">

    <label for="tu">Total Daily Units (TU):</label>
    <input type="number" id="tu" step="any">

    <label for="bg">Current Blood Glucose (BG):</label>
    <input type="number" id="bg" step="any">

    <label for="tg">Target Glucose (TG):</label>
    <input type="number" id="tg" step="any">

    <label for="g">Glucose Intake (g):</label>
    <input type="number" id="g" step="any">

    <button onclick="calculateDose()">Calculate Dose</button>

    <div class="result" id="result"></div>

    <div class="disclaimer">
      ⚠️ For professional use only. Always verify with a clinical pharmacist or physician.
    </div>
  </div>

  <script>
    function calculateDose() {
      const bw = parseFloat(document.getElementById('bw').value);
      const tu = parseFloat(document.getElementById('tu').value);
      const bg = parseFloat(document.getElementById('bg').value);
      const tg = parseFloat(document.getElementById('tg').value);
      const g = parseFloat(document.getElementById('g').value);

      if (isNaN(bw) || isNaN(tu) || isNaN(bg) || isNaN(tg) || isNaN(g)) {
        document.getElementById('result').innerText = "Please fill all fields.";
        return;
      }

      const dose = (bw * tu * ((bg - tg) + 3 * g)) / 1500;
      const rounded = Math.round(dose * 10) / 10;

      document.getElementById('result').innerText = `Recommended insulin dose: ${rounded} units`;
    }
  </script>
</body>
